<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/partial_toolbar"
        layout="@layout/partial_toolbar" />

    <fragment
        android:id="@+id/fragment_radio_browser"
        android:name="fr.simonlebras.radiofrance.ui.browser.list.RadioListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container_mini_controller"
        android:layout_below="@id/partial_toolbar" />

    <android.support.v7.widget.CardView
        android:id="@id/container_mini_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="8dp">

        <fragment
            android:id="@+id/fragment_mini_player"
            android:name="fr.simonlebras.radiofrance.ui.browser.player.MiniPlayerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </android.support.v7.widget.CardView>

</RelativeLayout>

