<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground"
    tools:context=".ui.browser.activity.RadioBrowserActivity">

    <ImageView
        android:id="@+id/radio_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="?attr/listPreferredItemPaddingLeft"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/radio_thumbnail_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/radio_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/radio_thumbnail"
        app:layout_constraintRight_toLeftOf="@+id/radio_favorite"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/radio_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textColor="@color/colorSecondaryText"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/radio_thumbnail"
        app:layout_constraintRight_toLeftOf="@+id/radio_favorite"
        app:layout_constraintTop_toBottomOf="@+id/radio_title" />

    <ImageView
        android:id="@+id/radio_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="?attr/listPreferredItemPaddingRight"
        android:contentDescription="@string/radio_favorite_description"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_favorite_grey_24dp" />

</android.support.constraint.ConstraintLayout>
